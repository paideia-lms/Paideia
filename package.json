{
	"name": "paideia",
	"private": true,
	"version": "0.0.1",
	"sideEffects": false,
	"type": "module",
	"author": "Paideia",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/hananoshikayomaru/paideia"
	},
	"homepage": "https://github.com/hananoshikayomaru/paideia",
	"scripts": {
		"build": "bun scripts/build.ts",
		"start": "./dist/paideia",
		"dev": "kill -9 $(lsof -t -i:3000); kill -9 $(lsof -t -i:3001); docker-compose up -d && NODE_ENV=development bun concurrently \"bun --watch ./server/index.ts\" \"bun react-router --watch typegen\"",
		"lint": "biome check . --write",
		"test:all": "bun test $(find . -type f -name \"*.test.ts\" -not -path \"./node_modules/*\")",
		"migrate:create": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:create && bun scripts/clean-s3.ts && sleep 1 && bun scripts/fix-types.ts",
		"migrate:status": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:status",
		"migrate:up": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:up",
		"migrate:down": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:down",
		"migrate:refresh": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:refresh --force-accept-warning && bun scripts/clean-s3.ts && sleep 1 && bun scripts/fix-types.ts",
		"migrate:reset": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:reset",
		"migrate:fresh": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:fresh --force-accept-warning && bun scripts/clean-s3.ts && sleep 1 && bun scripts/fix-types.ts",
		"docker:build": "docker build -t paideia:$(node -p \"require('./package.json').version\") .",
		"docker:run": "docker run -p 3000:3000 paideia:$(node -p \"require('./package.json').version\")",
		"typecheck": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload generate:types && PAYLOAD_CONFIG_PATH=server/payload.config.ts payload generate:db-schema && react-router typegen && sleep 1 && bun scripts/fix-types.ts; tsc --noEmit",
		"lefthook:install": "lefthook install"
	},
	"dependencies": {
		"@elysiajs/eden": "^1.4.1",
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/static": "^1.4.0",
		"@mantine/core": "^8.3.4",
		"@mantine/dropzone": "^8.3.4",
		"@mantine/form": "^8.3.4",
		"@mantine/hooks": "^8.3.4",
		"@mantine/notifications": "^8.3.4",
		"@mermaid-js/mermaid-cli": "^11.12.0",
		"@payloadcms/db-postgres": "^3.59.1",
		"@payloadcms/email-nodemailer": "^3.59.1",
		"@payloadcms/plugin-search": "^3.59.1",
		"@payloadcms/storage-s3": "^3.59.1",
		"@react-router/fs-routes": "^7.9.4",
		"@remix-run/form-data-parser": "^0.11.0",
		"@scalar/api-reference-react": "^0.7.55",
		"@standard-community/standard-json": "^0.3.5",
		"@tabler/icons-react": "^3.35.0",
		"alterschema": "^1.1.3",
		"concurrently": "^9.2.1",
		"drizzle-query-logger": "^1.1.1",
		"elysia": "^1.4.10",
		"elysia-connect-middleware": "^0.0.6",
		"es-toolkit": "^1.40.0",
		"isbot": "^5.1.31",
		"json-schema-library": "^10.3.0",
		"lefthook": "^1.13.6",
		"merkletreejs": "^0.6.0",
		"mime": "^4.1.0",
		"node-cache": "^5.1.2",
		"nuqs": "^2.7.1",
		"payload": "^3.59.1",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-router": "^7.9.4",
		"remix-utils": "^9.0.0",
		"request-ip": "^3.3.0",
		"search-query-parser": "^1.6.0",
		"sharp": "^0.34.4",
		"typescript-result": "^3.5.2",
		"ua-parser-js": "^2.0.6",
		"unstorage": "^1.17.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@aws-sdk/client-s3": "^3.908.0",
		"@biomejs/biome": "2.2.4",
		"@playwright/test": "^1.56.0",
		"@react-router/dev": "^7.9.4",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "^1.3.0",
		"@types/node": "^24.7.1",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.1",
		"@types/request-ip": "^0.0.41",
		"ignore": "^7.0.5",
		"json-schema": "^0.4.0",
		"postcss": "^8.5.6",
		"postcss-preset-mantine": "^1.18.0",
		"postcss-simple-vars": "^7.0.1",
		"typescript": "^5.9.3",
		"vite": "^6.3.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"patchedDependencies": {
		"@react-router/dev@7.6.2": "patches/@react-router%2Fdev@7.6.2.patch"
	}
}
