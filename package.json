{
	"name": "paideia",
	"description": "Paideia LMS - Simple, Robust, and Lightweight Learning Management System in a Single Executable",
	"version": "0.7.4",
	"keywords": [
		"paideia",
		"lms",
		"learning",
		"management",
		"system",
		"education"
	],
	"private": true,
	"sideEffects": false,
	"type": "module",
	"author": "Hananoshika Yomaru",
	"license": "AGPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/paideia-lms/paideia"
	},
	"homepage": "https://github.com/paideia-lms/paideia",
	"scripts": {
		"build": "bun scripts/build.ts",
		"start": "./dist/paideia",
		"dev": "kill -9 $(lsof -t -i:3000); kill -9 $(lsof -t -i:3001); docker-compose up -d && NODE_ENV=development bun concurrently \"bun --watch ./server/index.ts\" \"bun react-router --watch typegen\"",
		"lint": "biome check . --write",
		"test:all": "bun test $(find . -type f -name \"*.test.ts\" -not -path \"./node_modules/*\") 2>&1 | tee tests/reports/$(date +\"%Y-%m-%d\").log; bun scripts/process-test-log.ts tests/reports/$(date +\"%Y-%m-%d\").log",
		"test:staged": "lefthook run pre-commit",
		"migrate:create": "bun scripts/clean-s3.ts && PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:create",
		"migrate:status": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:status",
		"migrate:up": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate",
		"migrate:down": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:down",
		"migrate:refresh": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:refresh --force-accept-warning && bun scripts/clean-s3.ts",
		"migrate:reset": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:reset",
		"migrate:fresh": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload migrate:fresh --force-accept-warning && bun scripts/clean-s3.ts",
		"docker:build": "docker build -t paideia:$(node -p \"require('./package.json').version\") .",
		"docker:update": "docker compose -f docker-compose.yml -f docker-compose.paideia.yml pull",
		"docker:run": "docker compose -f docker-compose.yml -f docker-compose.paideia.yml up -d",
		"docker:prune": "docker image prune -f",
		"typegen": "PAYLOAD_CONFIG_PATH=server/payload.config.ts payload generate:types && PAYLOAD_CONFIG_PATH=server/payload.config.ts payload generate:db-schema && react-router typegen",
		"typecheck": "tsgo --noEmit --extendedDiagnostics",
		"lefthook:install": "lefthook install"
	},
